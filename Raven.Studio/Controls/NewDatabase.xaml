<controls:ChildWindow x:Class="Raven.Studio.Controls.NewDatabase"
		   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
		   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
		   xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
		   Width="400" Height="Auto" 
		   Title="NewDatabase">
	<Grid x:Name="LayoutRoot" Margin="2">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<Grid>
			<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			
			<TextBlock Text="Name: "
					   Margin="10"/>
			<TextBox x:Name="DbName"
					 Grid.Column="1"
					 Margin="5" KeyDown="DbName_KeyDown"/>
			<CheckBox Grid.Row="1" HorizontalAlignment="Right" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" x:Name="ShowAdvanced"/>
			<TextBlock Text="Advanced Settings"
					   Grid.Column="1"
					   Grid.Row="1"
					   MouseLeftButtonDown="Toggle"/>	
		</Grid>
		<Grid Grid.Row="1" x:Name="AdvancedSettings" Visibility="Collapsed">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>


			<TextBlock x:Name="DbPath" Text="Path: "
					   Margin="10"/>
			<TextBox Grid.Column="1"
					 Margin="5"/>
			<TextBlock Text="Logs: "
					   Grid.Row="1"
					   Margin="10"/>
			<TextBox x:Name="LogsPath" Grid.Column="1"
					 Grid.Row="1"
					 Margin="5"/>
			<TextBlock Text="Indexes: "
					   Grid.Row="2"
					   Margin="10"/>
			<TextBox x:Name="IndexPath" Grid.Column="1"
					 Grid.Row="2"
					 Margin="5"/>
		</Grid>

		<Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="2" />
		<Button x:Name="OKButton" Content="Next" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,79,0" Grid.Row="2" IsEnabled="{Binding Path=Text, ElementName=DbName,Converter={StaticResource StringToBoolean}}"/>
	</Grid>
</controls:ChildWindow>